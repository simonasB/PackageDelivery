@model PackageDelivery.WebApplication.Models.OrderViewModel.OrderRegistrationViewModel

@{
    ViewData["Title"] = "Siuntos Registracija";
}

<h2>Siuntos Registracija</h2>
@if(Model.isCompanySelected)
{
<form asp-action="RegisterOrder">
    <div class="form-horizontal">
        <h4>Siunta</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="OrderItemWeight" class="col-md-2 control-label">Masė (kg)</label>
            <div class="col-md-10">
                <input asp-for="OrderItemWeight" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderItemLength" class="col-md-2 control-label">Matmenys (ilgis, cm)</label>
            <div class="col-md-10">
                <input asp-for="OrderItemLength" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderItemWidth" class="col-md-2 control-label">Matmenys (plotis, cm)</label>
            <div class="col-md-10">
                <input asp-for="OrderItemWidth" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderItemHeight" class="col-md-2 control-label">Matmenys (aukštis, cm)</label>
            <div class="col-md-10">
                <input asp-for="OrderItemHeight" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>

        <h4>Siuntos paėmimo adresas</h4>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PickUpCountry">Šalis</label>
            <div class="col-md-10">
                @Html.DropDownList("PickUpCountry", (IEnumerable<SelectListItem>)ViewBag.PickUpCountry, new { @class = "form-control" })
                <span class="text-danger"></span>
            </div>
       </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PickUpCity">Miestas</label>
            <div class="col-md-10">
                <input asp-for="PickUpCity" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PickUpStreet">Gatvė</label>
            <div class="col-md-10">
                <input asp-for="PickUpStreet" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PickUpStreetNr">Gatvės numeris</label>
            <div class="col-md-10">
                <input asp-for="PickUpStreetNr" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PickUpHouseNr">Namo numeris</label>
            <div class="col-md-10">
                <input asp-for="PickUpHouseNr" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PickUpZipCode">pašto kodas</label>
            <div class="col-md-10">
                <input asp-for="PickUpZipCode" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>

        <h4>Siuntos pristatymo adresas</h4>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="DeliveryCountry">Šalis</label>
            <div class="col-md-10">
                @Html.DropDownList("DeliveryCountry", (IEnumerable<SelectListItem>)ViewBag.DeliveryCountry, new { @class = "form-control" })
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="DeliveryCity">Miestas</label>
            <div class="col-md-10">
                <input asp-for="DeliveryCity" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="DeliveryStreet">Gatvė</label>
            <div class="col-md-10">
                <input asp-for="DeliveryStreet" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="DeliveryStreetNr">Gatvės numeris</label>
            <div class="col-md-10">
                <input asp-for="DeliveryStreetNr" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="DeliveryHouseNr">Namo numeris</label>
            <div class="col-md-10">
                <input asp-for="DeliveryHouseNr" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="DeliveryZipCode">Pašto kodas</label>
            <div class="col-md-10">
                <input asp-for="DeliveryZipCode" class="form-control" required>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registruoti užsakymą" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

}
else
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-area="" asp-controller="Company" asp-action="Index" title="Pasirinkti imone">Pasirinkti imone</a>
            </div>
        </div>
    </div>
}

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
