@model IEnumerable<PackageDelivery.Domain.Entities.Company>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KilometerPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KilogramPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CubePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolumeAndWeightRatioToApplyVolumePrice)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KilometerPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KilogramPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CubePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolumeAndWeightRatioToApplyVolumePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.CurrencyId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompanyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompanyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompanyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
